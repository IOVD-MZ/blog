<h2>Lista de Categorias:</h2>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small>
            <small>Data de criação:{{date}}</small>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-2">Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Apagar </button>
            </form>
        </div>
    </div>

{{else}}

    <h4 class="mt-3">Nenhuma categoria registada</h4>
{{/each}}